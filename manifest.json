{
    "name": "No Notif Counter",
    "version": "1.1",
    "manifest_version": 2,
    "description": "Removes the notification counter in tab titles.",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/rsc/imgs/ico16.png",
            "32": "/rsc/imgs/ico32.png",
            "48": "/rsc/imgs/ico48.png",
            "128": "/rsc/imgs/ico128.png"
        }
    },
    "icons": {
        "16": "/rsc/imgs/ico16.png",
        "32": "/rsc/imgs/ico32.png",
        "48": "/rsc/imgs/ico48.png",
        "128": "/rsc/imgs/ico128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "no-notif-counter@yourdomain.com"
        }
    }
}
